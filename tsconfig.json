{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"],
      "@entities/*": ["entities/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@utilities/*": ["utilities/*"]
    }
  }
}
